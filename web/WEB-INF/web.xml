<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>BookAddServlet</servlet-name>
        <servlet-class>com.bookmall.ms.servlets.BookAddServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>BookDeleteServlet</servlet-name>
        <servlet-class>com.bookmall.ms.servlets.BookDeleteServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>BookListServlet</servlet-name>
        <servlet-class>com.bookmall.ms.servlets.BookListServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>BookModifyServlet</servlet-name>
        <servlet-class>com.bookmall.ms.servlets.BookModifyServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>BookQueryServlet</servlet-name>
        <servlet-class>com.bookmall.ms.servlets.BookQueryServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.bookmall.ms.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BookModifyServlet</servlet-name>
        <url-pattern>/modify</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>BookListServlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>BookDeleteServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>BookAddServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>BookQueryServlet</servlet-name>
        <url-pattern>/query</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>LoginCheckFilter</filter-name>
        <filter-class>com.bookmall.ms.filter.LoginCheckFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LoginCheckFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
</web-app>